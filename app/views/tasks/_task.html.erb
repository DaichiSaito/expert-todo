<li id="task-<%= task.id %>">
  <%= link_to edit_task_path task do %>
    <span class="content">
      <%= task.content %>
    </span>
  <% end %>
  <% if task.description.present? %>
    <br>âˆŸ<%= task.description %>
  <% end %>
  
  <% if task.deadline.present? %>
    <%= task.deadline %>
  <% end %>
  
  <% if task.attachments.present? %>
    <% task.attachments.each do |attachment| %>
      <%= image_tag attachment.location %>
    <% end %>
  <% end %>
  
  <% if task.closed? %>
    <%= link_to 'open', open_task_path(task), method: :patch, data: { confirm: 'Are you sure?' } %>
  <% else %>
    <%= link_to 'close', close_task_path(task), method: :patch, data: { confirm: 'Are you sure?' } %>
  <% end %>
  
  <%= link_to "delete", task, method: :delete,
                                       data: { confirm: "You sure?" } %>
  
</li>